generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement()) @db.UnsignedInt
  email       String        @unique
  name        String?
  password    String
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  deletedAt   DateTime?     @map("deleted_at")
  Transaction Transaction[]

  @@map("users")
}

model Product {
  id          Int           @id @default(autoincrement()) @db.UnsignedInt
  name        String
  description String?
  image       String?
  price       Int           @db.UnsignedInt
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  deletedAt   DateTime?     @map("deleted_at")
  FlashSale   FlashSale[]
  Transaction Transaction[]

  @@map("products")
}

model FlashSale {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  productId Int       @map("product_id") @db.UnsignedInt
  discount  Int       @db.UnsignedInt
  startAt   DateTime  @map("start_at")
  endAt     DateTime  @map("end_at")
  quota     Int       @db.UnsignedInt
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  product     Product       @relation(fields: [productId], references: [id])
  Transaction Transaction[]

  @@map("flash_sales")
}

model Transaction {
  id          Int       @id @default(autoincrement()) @db.UnsignedInt
  userId      Int       @map("user_id") @db.UnsignedInt
  productId   Int       @map("product_id") @db.UnsignedInt
  flashSaleId Int?      @map("flash_sale_id") @db.UnsignedInt
  quantity    Int       @db.UnsignedInt
  totalPrice  Int       @map("total_price") @db.UnsignedInt
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  user      User       @relation(fields: [userId], references: [id])
  product   Product    @relation(fields: [productId], references: [id])
  flashSale FlashSale? @relation(fields: [flashSaleId], references: [id])

  @@map("transactions")
}
